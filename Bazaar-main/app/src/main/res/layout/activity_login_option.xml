<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_gray"
            android:background="color/transparent"
            android:padding="20dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bazaar"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="20dp"
                android:textColor="#673AB7"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/googleLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue with google"
                android:layout_marginBottom="10dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/google"
                android:minHeight="@dimen/n_button_height"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/emailLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue with Email"
                android:layout_marginBottom="10dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_email_white"
                android:minHeight="@dimen/n_button_height"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/phoneLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue with Phone"
                android:layout_marginBottom="10dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_phone_white"
                android:minHeight="@dimen/n_button_height"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>